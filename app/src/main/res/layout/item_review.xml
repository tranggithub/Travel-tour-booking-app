<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_border_maincolor"
    android:backgroundTint="#2E3244">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:elevation="12dp"
        android:id="@+id/cv_avatar_itemreview"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <ImageView
        android:id="@+id/iv_avatar_itemreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_ten_itemreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Nguyễn Văn A"
        android:textColor="@color/white"
        android:fontFamily="@font/firasans_bold"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@id/cv_avatar_itemreview"
        app:layout_constraintBottom_toBottomOf="@id/cv_avatar_itemreview"
        app:layout_constraintStart_toEndOf="@id/cv_avatar_itemreview"/>

    <RatingBar
        android:id="@+id/rb_votingstar_itemreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:progressTint="@color/maincolor"
        android:rating="4"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:stepSize="0.5"
        android:isIndicator="true"
        app:layout_constraintBottom_toBottomOf="@id/cv_avatar_itemreview"
        app:layout_constraintStart_toEndOf="@id/tv_ten_itemreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_avatar_itemreview"/>

    <TextView
        android:id="@+id/tv_reviewtext_itemreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Khách sạn siêu đẹp, thoáng mát và thoải mái. View đẹp có cả hồ bơi ngoài trời."
        android:textColor="@color/white"
        android:fontFamily="@font/firasans_medium"
        app:layout_constraintTop_toBottomOf="@id/cv_avatar_itemreview"
        app:layout_constraintStart_toStartOf="@id/cv_avatar_itemreview"
        app:layout_constraintEnd_toEndOf="@id/rb_votingstar_itemreview"/>
    <ImageView
        android:id="@+id/iv_like_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/custom_like_button"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_reviewtext_itemreview"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_numlike_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="30"
        android:textColor="@color/white"
        android:fontFamily="@font/firasans_medium"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_like_review"
        app:layout_constraintBottom_toBottomOf="@id/iv_like_review"
        app:layout_constraintStart_toEndOf="@id/iv_like_review"/>
    <ImageView
        android:id="@+id/iv_unlike_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/custom_unlike_button"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/iv_like_review"
        app:layout_constraintBottom_toBottomOf="@id/iv_like_review"
        app:layout_constraintStart_toEndOf="@id/tv_numlike_review"/>
    <TextView
        android:id="@+id/tv_numunlike_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="1"
        android:textColor="@color/white"
        android:fontFamily="@font/firasans_medium"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_unlike_review"
        app:layout_constraintBottom_toBottomOf="@id/iv_unlike_review"
        app:layout_constraintStart_toEndOf="@id/iv_unlike_review"/>
    <TextView
        android:id="@+id/tv_date_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13 tháng 3, 2014"
        android:textColor="@color/white"
        android:fontFamily="@font/firasans_medium"
        android:textSize="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_like_review"
        app:layout_constraintBottom_toBottomOf="@id/iv_like_review"/>


</androidx.constraintlayout.widget.ConstraintLayout>