<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <TextView
            android:id="@+id/my_card"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:fontFamily="@font/firasans_bold"
            android:text="PHƯƠNG THỨC THANH TOÁN"
            android:textColor="#2D99AE"
            android:textSize="@dimen/size_title"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="10dp"></TextView>

        <Button
            android:id="@+id/button8"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="1dp"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/momo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Momo E-wallet"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></TextView>

        <RelativeLayout
            android:id="@+id/chosse_momo"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#CC22242C"
            android:clipToOutline="true"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/momo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="DuplicateIds,MissingConstraints">

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_momo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"></ImageView>

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_next"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/email"
                android:text="Momo E-wallet"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:fontFamily="@font/firasans_medium"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/zalopay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="ZaloPay"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chosse_momo"></TextView>

        <RelativeLayout
            android:id="@+id/chosse_zalopay"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="#CC22242C"
            android:clipToOutline="true"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/zalopay"
            tools:ignore="DuplicateIds,MissingConstraints">

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_zalopay"></ImageView>

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_next"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/email"
                android:fontFamily="@font/firasans_medium"
                android:text="ZaloPay"
                android:textColor="#FFFFFF"
                android:textSize="20dp"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/cknh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Chuyển khoản ngân hàng"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chosse_zalopay" />

        <ImageButton
            android:id="@+id/vcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_vietcombank"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cknh"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_vcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vietcombank"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/vcb"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/agrb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_agribank"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/vcb"
            app:layout_constraintTop_toBottomOf="@id/cknh"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_agrb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agribank"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/agrb"
            app:layout_constraintLeft_toRightOf="@id/txt_vcb"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/tcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_techcombank"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/agrb"
            app:layout_constraintTop_toBottomOf="@id/cknh"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_tcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Techcombank"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="9dp"
            app:layout_constraintTop_toBottomOf="@id/tcb"
            app:layout_constraintLeft_toRightOf="@id/txt_agrb"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/ocb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_ocb"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/tcb"
            app:layout_constraintTop_toBottomOf="@id/cknh"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_ocb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OCB"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="14dp"
            app:layout_constraintTop_toBottomOf="@id/ocb"
            app:layout_constraintLeft_toRightOf="@id/txt_tcb"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/bidv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_bidv"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/ocb"
            app:layout_constraintTop_toBottomOf="@id/cknh"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_bidv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIDV"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/bidv"
            app:layout_constraintLeft_toRightOf="@id/txt_ocb"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/tpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_tpbank"
            app:layout_constraintLeft_toRightOf="@id/bidv"
            app:layout_constraintTop_toBottomOf="@id/cknh"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_tpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TP Bank"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            app:layout_constraintTop_toBottomOf="@id/tpb"
            app:layout_constraintLeft_toRightOf="@id/txt_bidv"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/pay_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="150dp"
            android:text="Thẻ thanh toán"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_vietcombank"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pay_card"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visa"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/visa"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/jcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_agribank"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/visa"
            app:layout_constraintTop_toBottomOf="@id/pay_card"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_jcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JCB"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="43dp"
            app:layout_constraintTop_toBottomOf="@id/jcb"
            app:layout_constraintLeft_toRightOf="@id/txt_visa"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/mstcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:src="@drawable/ic_techcombank"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toRightOf="@id/jcb"
            app:layout_constraintTop_toBottomOf="@id/pay_card"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_mstcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MasterCard"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toBottomOf="@id/mstcard"
            app:layout_constraintLeft_toRightOf="@id/txt_jcb"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#CC22242C"
            android:clipToOutline="true"
            app:layout_constraintBottom_toTopOf="@id/money"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/firasans_medium"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.190.123 VND"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/firasans_medium"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="InvalidId,MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn phương thức thanh toán"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/firasans_medium"></TextView>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Chọn"
                android:fontFamily="@font/firasans_medium"></Button>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>