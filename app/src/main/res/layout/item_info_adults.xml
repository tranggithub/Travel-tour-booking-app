<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/custom_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_bold"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="Người lớn 1"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="59dp" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_multiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_multiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/card_number"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#BCFEFE"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="124dp"></TextView>

        <EditText
            android:layout_width="360dp"
            android:layout_height="46dp"
            android:background="@drawable/rounded_border"
            android:hint="example@gmail.com"
            android:textColor="#FFFFFF"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_number">
        </EditText>

        <TextView
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textColor="#BCFEFE"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="InvalidId,MissingConstraints"
            tools:layout_editor_absoluteY="216dp"></TextView>

        <EditText
            android:layout_width="360dp"
            android:layout_height="46dp"
            android:background="@drawable/rounded_border"
            android:hint="Nguyễn Văn A"
            android:textColor="#FFFFFF"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name">
        </EditText>
        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Lưu lại"
            android:textSize="20dp"
            android:fontFamily="@font/firasans_bold"
            android:backgroundTint="#000000"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>