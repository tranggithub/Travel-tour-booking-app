<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/custom_button">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_multiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_multiply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firasans_bold"
            android:lineSpacingExtra="8sp"
            android:text="Tất cả thông tin đặt chỗ của bạn đều chính xác?"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:lineSpacingExtra="8sp"
            android:text="Bạn sẽ không thể thay đổi thông tin đặt chỗ một khi chọn tiếp tục thanh toán. Bạn có muốn hoàn tất thanh toán không?"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints,NotSibling"
            tools:layout_editor_absoluteY="114dp"></TextView>

        <Button
            android:id="@+id/check"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Kiểm tra lại"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/firasans_bold"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </Button>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Hoàn tất"
            android:textSize="20dp"
            android:fontFamily="@font/firasans_bold"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toTopOf="@id/check"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>