<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_tiennghichung">
    <View
        android:id="@+id/v_tiennghichung_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_wifi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </View>

    <TextView
        android:id="@+id/tv_tiennghichung_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_italic"
        android:text="Wifi"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/v_tiennghichung_icon"
        app:layout_constraintStart_toStartOf="@id/v_tiennghichung_icon"
        app:layout_constraintTop_toBottomOf="@id/v_tiennghichung_icon"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>