<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_medium"
        android:justificationMode="inter_word"
        android:text="Lần đầu tiên đặt dịch vụ glamping vào dịp lễ nên Thùy Anh không lường trước tình huống này. 'Tôi nghĩ nghỉ lễ dài (5 ngày) nên mọi người thường sẽ đi du lịch xa, không nghĩ các điểm cắm trại gần thành phố lại khó đặt như vậy', cô nói."
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_section"/>
    <ImageView
        android:id="@+id/iv_detail_notification"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_leu1"
        android:background="@drawable/custom_button"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_section"/>
    <TextView
        android:id="@+id/tv_subtitle_detail_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Du khách hoạt động tự do tại các bãi cắm trại dịch vụ. Ảnh: Bích Phương."
        android:textColor="#9b9da5"
        android:fontFamily="@font/firasans_medium"
        android:textSize="12dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_notification"/>
</androidx.constraintlayout.widget.ConstraintLayout>