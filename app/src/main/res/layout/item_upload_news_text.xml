<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_add_item_news_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:id="@+id/edt_item_upload_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="35dp"
            android:alpha="0.6"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:fontFamily="@font/firasans_medium"
            android:hint="Nhập nội dung vào đây..."
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_thumbnail_upload_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/custom_maincolor_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:orientation="vertical"
            android:alpha="0.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tải hình ảnh lên"
                android:textColor="@color/maincolor"
                android:fontFamily="@font/firasans_medium"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/iv_image_upload_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_upload_image"
                android:layout_marginLeft="@dimen/margin_section"
                android:layout_marginRight="@dimen/margin_section"
                android:layout_marginBottom="@dimen/margin_section"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_section"
                android:layout_marginRight="@dimen/margin_section"
                android:hint="Nhập ghi chú hình ảnh vào đây..."
                android:fontFamily="@font/firasans_medium"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus"
            app:layout_constraintEnd_toEndOf="@id/edt_item_upload_news"
            app:layout_constraintTop_toTopOf="@id/edt_item_upload_news"
            app:layout_constraintBottom_toBottomOf="@id/edt_item_upload_news"
            android:layout_marginRight="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>