<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_section"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:id="@+id/cl_item_place">

    <ImageView
        android:id="@+id/iv_place"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_toronto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_thumbnail_place"
        android:clipToOutline="true"/>

    <ImageView
        android:id="@+id/iv_label_place"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:alpha="0.47"
        android:background="@drawable/custom_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_place" />

    <TextView
        android:id="@+id/tv_title_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:padding="5dp"
        android:text="Chuyến du lịch đảo Toronto"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_label_place" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_placesmall"
        android:drawablePadding="@dimen/padding_text"
        android:fontFamily="@font/firasans_light"
        android:text="Canada (4 ngày)"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_place" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:padding="5dp"
        android:text="9.190.123"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_label_place"
        app:layout_constraintEnd_toEndOf="@+id/iv_label_place"/>

    <ImageView
        android:id="@+id/iv_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_vote"
        app:layout_constraintEnd_toEndOf="@+id/iv_label_place"
        app:layout_constraintTop_toTopOf="@id/iv_label_place"
        android:paddingRight="5dp"
        android:paddingTop="8dp"/>

    <ImageView
        android:id="@+id/iv_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"

        android:paddingRight="1dp"
        android:src="@drawable/ic_star_vote"
        app:layout_constraintEnd_toStartOf="@+id/iv_star_1"
        app:layout_constraintTop_toTopOf="@id/iv_label_place" />

    <ImageView
        android:id="@+id/iv_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"

        android:paddingRight="1dp"
        android:src="@drawable/ic_star_vote"
        app:layout_constraintEnd_toStartOf="@+id/iv_star_2"
        app:layout_constraintTop_toTopOf="@id/iv_label_place" />
    <ImageView
        android:id="@+id/iv_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"

        android:paddingRight="1dp"
        android:src="@drawable/ic_star_vote"
        app:layout_constraintEnd_toStartOf="@+id/iv_star_3"
        app:layout_constraintTop_toTopOf="@id/iv_label_place" />
    <ImageView
        android:id="@+id/iv_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingRight="1dp"
        android:src="@drawable/ic_star_vote"
        app:layout_constraintEnd_toStartOf="@+id/iv_star_4"
        app:layout_constraintTop_toTopOf="@id/iv_label_place" />







</androidx.constraintlayout.widget.ConstraintLayout>