<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v_food"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_food_bar"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_chitietbay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/firasans_medium"
        android:text="Cung cấp các bữa ăn "
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/v_food"
        app:layout_constraintTop_toTopOf="@id/v_food"
        app:layout_constraintBottom_toBottomOf="@id/v_food"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>